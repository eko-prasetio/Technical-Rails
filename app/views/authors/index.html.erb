<div class="card">
    <div class="card-header">
    <h3 class="card-title">List Authors</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th style="width: 10px">No</th>
            <th>Name</th>  
        </tr>
        </thead>
        <tbody>
      <% @authors.each_with_index do |author, index| %>
        <tr>
            <td><%= index + 1 %> </td>
            <td><%= author.name %> </td>  
        </tr>        
    <% end %>
        </tbody>
    </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
    <ul class="pagination pagination-sm m-0 float-right">
        <%= paginate @authors %>      
    </ul>
    </div>
</div>
<!-- /.card -->